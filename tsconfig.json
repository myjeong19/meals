{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~app/*": ["app/*"],
      "~entities/*": ["entities/*"],
      "~features/*": ["features/*"],
      "~shared/*": ["shared/*"],
      "~widgets/*": ["widgets/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "nativewind-env.d.ts"]
}
